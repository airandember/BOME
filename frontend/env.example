# Frontend Environment Configuration

# API Configuration
PUBLIC_API_BASE_URL=http://localhost:8080/api/v1
PUBLIC_WS_URL=ws://localhost:8080/ws

# Stripe Configuration (Public Keys Only)
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PUBLIC_STRIPE_CUSTOMER_PORTAL_URL=https://billing.stripe.com/your-portal-url

# Bunny.net Configuration (Public CDN URLs)
PUBLIC_BUNNY_CDN_URL=https://your-pull-zone.b-cdn.net
PUBLIC_BUNNY_STREAM_URL=https://iframe.mediadelivery.net/embed

# App Configuration
PUBLIC_APP_NAME=Book of Mormon Evidences
PUBLIC_APP_DESCRIPTION=Discover compelling evidence supporting the Book of Mormon
PUBLIC_APP_URL=https://bookofmormonevidence.org
PUBLIC_APP_VERSION=1.0.0

# Feature Flags
PUBLIC_ENABLE_COMMENTS=true
PUBLIC_ENABLE_SHARING=true
PUBLIC_ENABLE_NOTIFICATIONS=true
PUBLIC_ENABLE_DARK_MODE=true

# Analytics (Optional)
PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Social Media
PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
PUBLIC_TWITTER_HANDLE=@BOMEvidences

# Contact Information
PUBLIC_CONTACT_EMAIL=contact@bookofmormonevidence.org
PUBLIC_SUPPORT_EMAIL=support@bookofmormonevidence.org

# Subscription Plans (Public Info)
PUBLIC_BASIC_PLAN_PRICE=9.99
PUBLIC_PREMIUM_PLAN_PRICE=19.99
PUBLIC_ANNUAL_DISCOUNT=20

# BOME Streaming Site - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_URL=ws://localhost:8080/ws

# =============================================================================
# Bunny.net Video Streaming Configuration
# =============================================================================
VITE_BUNNY_LIBRARY_ID=your_bunny_library_id
VITE_BUNNY_API_KEY=your_bunny_api_key
VITE_BUNNY_CDN_URL=https://your_cdn_url.b-cdn.net
VITE_BUNNY_STORAGE_ZONE=your_storage_zone
VITE_BUNNY_PULL_ZONE=your_pull_zone

# =============================================================================
# Stripe Payment Configuration
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# Google Analytics Configuration
# =============================================================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_DEBUG=false

# =============================================================================
# Digital Ocean Configuration
# =============================================================================
VITE_DO_SPACES_KEY=your_do_spaces_key
VITE_DO_SPACES_SECRET=your_do_spaces_secret
VITE_DO_SPACES_ENDPOINT=https://your_region.digitaloceanspaces.com
VITE_DO_SPACES_BUCKET=your_bucket_name
VITE_DO_SPACES_REGION=your_region

# =============================================================================
# Email Service Configuration
# =============================================================================
VITE_EMAIL_SERVICE_API_KEY=your_email_service_api_key
VITE_EMAIL_FROM_ADDRESS=noreply@yourdomain.com
VITE_EMAIL_FROM_NAME=BOME Streaming

# =============================================================================
# Monitoring and Alerting Configuration
# =============================================================================
VITE_ALERT_EMAIL=admin@yourdomain.com
VITE_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
VITE_ERROR_RATE_THRESHOLD=5
VITE_RESPONSE_TIME_THRESHOLD=2000
VITE_MEMORY_USAGE_THRESHOLD=80
VITE_DISK_USAGE_THRESHOLD=85

# =============================================================================
# Security Configuration
# =============================================================================
VITE_JWT_SECRET=your_jwt_secret_key
VITE_ENCRYPTION_KEY=your_encryption_key
VITE_CSRF_SECRET=your_csrf_secret

# =============================================================================
# Application Configuration
# =============================================================================
VITE_APP_NAME=BOME Streaming
VITE_APP_URL=https://yourdomain.com
VITE_APP_ENV=development
VITE_APP_DEBUG=true

# =============================================================================
# CDN and Asset Configuration
# =============================================================================
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_ASSET_URL=https://assets.yourdomain.com
VITE_IMAGE_OPTIMIZATION_SERVICE=https://images.yourdomain.com

# =============================================================================
# Social Media Configuration
# =============================================================================
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_API_KEY=your_twitter_api_key
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id

# =============================================================================
# Database Configuration (for backend reference)
# =============================================================================
# DATABASE_URL=postgresql://username:password@localhost:5432/bome_db
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Roku App Configuration
# =============================================================================
VITE_ROKU_DEVELOPER_ID=your_roku_developer_id
VITE_ROKU_APP_ID=your_roku_app_id
VITE_ROKU_CHANNEL_STORE_ID=your_channel_store_id

# =============================================================================
# Performance and Optimization
# =============================================================================
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_LAZY_LOADING_THRESHOLD=100
VITE_IMAGE_CACHE_SIZE=50
VITE_VIDEO_PRELOAD_SIZE=3

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MONITORING=true
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# Testing Configuration
# =============================================================================
VITE_TEST_API_BASE_URL=http://localhost:3000/api/test
VITE_TEST_STRIPE_KEY=pk_test_your_test_stripe_key
VITE_ENABLE_TEST_MODE=false

# =============================================================================
# Admin Configuration
# =============================================================================
VITE_ADMIN_EMAIL=admin@yourdomain.com
VITE_SUPER_ADMIN_EMAIL=superadmin@yourdomain.com
VITE_ADMIN_PANEL_URL=/admin

# =============================================================================
# Backup and Recovery
# =============================================================================
VITE_BACKUP_RETENTION_DAYS=30
VITE_BACKUP_SCHEDULE=0 2 * * *
VITE_ENABLE_AUTO_BACKUP=true

# =============================================================================
# Rate Limiting
# =============================================================================
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=100
VITE_RATE_LIMIT_BURST_SIZE=20
VITE_RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# CORS Configuration
# =============================================================================
VITE_CORS_ORIGIN=https://yourdomain.com
VITE_CORS_CREDENTIALS=true

# =============================================================================
# Logging Configuration
# =============================================================================
VITE_LOG_LEVEL=info
VITE_ENABLE_REQUEST_LOGGING=true
VITE_LOG_RETENTION_DAYS=30 